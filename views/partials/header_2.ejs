        for (i = 0; i < locations.length; i++) 
        {
            var p = locations[i];
            var latlng = new google.maps.LatLng(parseFloat(p[0]), parseFloat(p[1]));
            bounds.extend(latlng);
             
            var marker = new google.maps.Marker({
                position: latlng,
                map: map,
                icon: image,
                title: p[2],

                infowindow.setContent("<h3>"+this.title+"</h3>" + this.address+ "<br>" + this.description + "<br>" +this.hours );
              }
              else {
                infowindow.setContent("<h3>"+this.title+"</h3>" + this.address);
              }
                infowindow.open(map, this);

            });
        }

        map.fitBounds(bounds);
}


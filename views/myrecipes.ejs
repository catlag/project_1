        <ul>
            <li><a href="/myrecipes">My Recipes</a></li>
            <li><a href="/logout">Log Out</a></li>
        	<li>
	            <form action="/search" class="pure-form" method="GET">	
					<input type="text" class="pure-input-1-3 pure-input-rounded"name="recipe" >
					<button type="submit" class="pure-button">
						<i class="fa fa-search"></i>
					</button>
				</form>
			</li>	
        </ul>
    </div>
</div>

<div class="page-body results-heading">

<% if (!allFoods){ %>
<h1>You have no foods!</h1>

<%} else if (allFoods) { %>
<h1>These are all your foods!</h1>
 <% allFoods.forEach(function(foods){ %>
	
	<h4> 

		<a href="/details/<%=foods.foodId %>" ><%= foods.name %></a> 
	</h4>
	<br>
		<img src="<%= foods.imageUrl %>" alt=""> 
	<form action="/myrecipes/<%=foods.foodId%>/delete?_method=delete" method="POST">
	 <button class="button-warning pure-button" type="submit"> Delete</button> 
	</form>
	
 	<% })} %>
